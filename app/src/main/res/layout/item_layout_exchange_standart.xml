<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="exchangeItemData"
            type="aykhan.task.exchange.local.ExchangeRate" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="@dimen/page_default_padding"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/page_default_padding">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{exchangeItemData.code}"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textStyle="bold"
                    tools:text="GBP" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:text="@{exchangeItemData.date}"
                    android:textAlignment="gravity"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                    android:textStyle="italic"
                    tools:text="Wed, 13 May 2020 00:00:01 GMT" />

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_space" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{exchangeItemData.name}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="Name: U.K. Pound Sterling" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_space" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{exchangeItemData.numericCode}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="Numeric Code: 826" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{exchangeItemData.alphaCode}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="Alpha Code: GBP" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_space" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{Double.toString(exchangeItemData.rate)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="Rate: 0.888787228515155" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{Double.toString(exchangeItemData.rate)}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                tools:text="InverseRate: 1.2337393737923" />

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

</layout>